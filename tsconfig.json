{
  "exclude": ["./doc-to-collection-cli", "./node_modules", "dist", "./src/temp.ts", "api"],
  
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "strict": true,
  
    "target": "ES2017",
    "lib": [
      "ES6",
      "DOM"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    //Configurando atalhos das pastas
    "baseUrl": ".",
    "paths": {
      "@Models/*" : ["./src/Models"],
      "@Templates/*" : ["./src/Templates"]
    }
  }
}